command_not_found_handle() {
    local cmd="$1"

    case "$cmd" in
        # lhNUM
        lh[0-9]*)
            num="${cmd#lh}"
            echo "â†’ connecting to lh${num}..."
            sudo ssh2 "lh${num}"
            ;;

        # bNUM â†’ backupNUM
        b[0-9]*)
            num="${cmd#b}"
            echo "â†’ connecting to backup${num}..."
            sudo ssh2 "backup${num}"
            ;;

        # backupNUM
        backup[0-9]*)
            num="${cmd#backup}"
            echo "â†’ connecting to backup${num}..."
            sudo ssh2 "backup${num}"
            ;;

        # mNUM â†’ mailserviceNUM
        m[0-9]*)
            num="${cmd#m}"
            echo "â†’ connecting to mailservice${num}..."
            sudo ssh2 "mailservice${num}"
            ;;

        # mailserviceNUM
        mailservice[0-9]*)
            num="${cmd#mailservice}"
            echo "â†’ connecting to mailservice${num}..."
            sudo ssh2 "mailservice${num}"
            ;;

        # sNUM â†’ sonicNUM
        s[0-9]*)
            num="${cmd#s}"
            echo "â†’ connecting to sonic${num}..."
            sudo ssh2 "sonic${num}"
            ;;

        # sonicNUM
        sonic[0-9]*)
            num="${cmd#sonic}"
            echo "â†’ connecting to sonic${num}..."
            sudo ssh2 "sonic${num}"
            ;;

        # fallback
        *)
            echo "bash: $cmd: command not found"
            return 127
            ;;
    esac
}
