  echo -e "\e[1;36mâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\e[0m"
  echo
  echo -e "ðŸ“…  Jalali Date: \e[1;32m$jy/$jm/$jd\e[0m"
